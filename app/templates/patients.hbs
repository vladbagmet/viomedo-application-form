<div class="wrapper">
    <div class="formBlock">
        <p class="article">Patient`s application form</p>
        <form>
            <span>Gender:</span>
            {{radio-button id="men" value='male' checked=newPatient.gender}}
            <label for="men">Male</label>
            {{radio-button id="women" value='female' checked=newPatient.gender}}
            <label for="women">Female</label>

            {{input type="text" class="formField" id="firstName" placeholder="First name" value=newPatient.firstName focus-out=(action (mut showFirstNameError) true)}}
            {{#if showFirstNameError}}
              {{#if (v-get newPatient 'firstName' 'isInvalid')}}
                  <div class="error-message">
                    {{v-get newPatient 'firstName' 'message'}}
                  </div>
              {{/if}}
            {{/if}}

            {{input type="text" class="formField" id="lastName" placeholder="Last name" value=newPatient.lastName focus-out=(action (mut showLastNameError) true)}}
            {{#if showLastNameError}}
              {{#if (v-get newPatient 'lastName' 'isInvalid')}}
                  <div class="error-message">
                    {{v-get newPatient 'lastName' 'message'}}
                  </div>
              {{/if}}
            {{/if}}

            {{input type="text" class="formField" id="email" placeholder="E-mail" value=newPatient.email focus-out=(action (mut showEmailError) true)}}
            {{#if showEmailError}}
              {{#if (v-get newPatient 'email' 'isInvalid')}}
                  <div class="error-message">
                      {{v-get newPatient 'email' 'message'}}
                  </div>
              {{/if}}
            {{/if}}

            {{input type="text" class="formField" id="phone" placeholder="Phone" value=newPatient.phone focus-out=(action (mut showPhoneError) true)}}
            {{#if showPhoneError}}
              {{#if (v-get newPatient 'phone' 'isInvalid')}}
                  <div class="error-message">
                    {{v-get newPatient 'phone' 'message'}}
                  </div>
              {{/if}}
            {{/if}}

            {{input type="text" class="formField" id="age" placeholder="Age" value=newPatient.age focus-out=(action (mut showAgeError) true)}}
            {{#if showAgeError}}
              {{#if (v-get newPatient 'age' 'isInvalid')}}
                  <div class="error-message">
                    {{v-get newPatient 'age' 'message'}}
                  </div>
              {{/if}}
            {{/if}}

            {{input type="text" class="formField" id="zip" placeholder="Zip" value=newPatient.zip focus-out=(action (mut showZipError) true)}}
            {{#if showZipError}}
              {{#if (v-get newPatient 'zip' 'isInvalid')}}
                  <div class="error-message">
                    {{v-get newPatient 'zip' 'message'}}
                  </div>
              {{/if}}
            {{/if}}

            {{input type="checkbox" id="checkBtn" checked=newPatient.termsAccepted focus-out=(action (mut showTermsAcceptedError) true)}}
            <label for="checkBtn">Accept terms of service</label>
            {{#if showTermsAcceptedError}}
              {{#if (v-get newPatient 'termsAccepted' 'isInvalid')}}
                  <div class="error-message">
                    {{v-get newPatient 'termsAccepted' 'message'}}
                  </div>
              {{/if}}
            {{/if}}

            <input {{action "addNewPatient" newPatient}} {{bind-attr disabled=state}} type="submit" class="submitBtn" value="Send">
        </form>
    </div>
</div>
